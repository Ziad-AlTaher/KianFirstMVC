@model Student

@{
    ViewData["Title"] = "تعديل بيانات الطالب";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-lg">
                <div class="card-header bg-warning text-dark">
                    <h3 class="mb-0">
                        <i class="fas fa-user-edit me-3"></i>تعديل بيانات الطالب
                    </h3>
                </div>
                <div class="card-body p-4">
                    <!-- معلومات الطالب الحالية -->
                    <div class="alert alert-info mb-4">
                        <div class="row">
                            <div class="col-md-6">
                                <strong><i class="fas fa-id-badge me-2"></i>رقم الطالب:</strong> @Model.Id
                            </div>
                            <div class="col-md-6">
                                <strong><i class="fas fa-calendar-check me-2"></i>تاريخ التسجيل:</strong> @Model.EnrollmentDate.ToString("dd/MM/yyyy")
                            </div>
                        </div>
                    </div>

                    <form asp-action="Edit" method="post" class="needs-validation" novalidate>
                        <input asp-for="Id" type="hidden" />
                        <input asp-for="EnrollmentDate" type="hidden" />

                        <div class="row">
                            <!-- الاسم الأول -->
                            <div class="col-md-6 mb-3">
                                <label asp-for="FirstName" class="form-label fw-bold">
                                    <i class="fas fa-user me-2"></i>الاسم الأول
                                </label>
                                <input asp-for="FirstName" class="form-control form-control-lg"
                                       placeholder="أدخل الاسم الأول" required />
                                <span asp-validation-for="FirstName" class="text-danger"></span>
                                <div class="invalid-feedback">
                                    يرجى إدخال الاسم الأول
                                </div>
                            </div>

                            <!-- الاسم الأخير -->
                            <div class="col-md-6 mb-3">
                                <label asp-for="LastName" class="form-label fw-bold">
                                    <i class="fas fa-user me-2"></i>الاسم الأخير
                                </label>
                                <input asp-for="LastName" class="form-control form-control-lg"
                                       placeholder="أدخل الاسم الأخير" required />
                                <span asp-validation-for="LastName" class="text-danger"></span>
                                <div class="invalid-feedback">
                                    يرجى إدخال الاسم الأخير
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <!-- البريد الإلكتروني -->
                            <div class="col-md-6 mb-3">
                                <label asp-for="Email" class="form-label fw-bold">
                                    <i class="fas fa-envelope me-2"></i>البريد الإلكتروني
                                </label>
                                <input asp-for="Email" type="email" class="form-control form-control-lg"
                                       placeholder="example@email.com" required />
                                <span asp-validation-for="Email" class="text-danger"></span>
                                <div class="invalid-feedback">
                                    يرجى إدخال بريد إلكتروني صحيح
                                </div>
                            </div>

                            <!-- رقم الهاتف -->
                            <div class="col-md-6 mb-3">
                                <label asp-for="Phone" class="form-label fw-bold">
                                    <i class="fas fa-phone me-2"></i>رقم الهاتف
                                    <small class="text-muted">(اختياري)</small>
                                </label>
                                <input asp-for="Phone" type="tel" class="form-control form-control-lg"
                                       placeholder="01xxxxxxxxx" />
                                <span asp-validation-for="Phone" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row">
                            <!-- تاريخ الميلاد -->
                            <div class="col-md-12 mb-3">
                                <label asp-for="DateOfBirth" class="form-label fw-bold">
                                    <i class="fas fa-calendar-alt me-2"></i>تاريخ الميلاد
                                </label>
                                <input asp-for="DateOfBirth" type="date" class="form-control form-control-lg"
                                       required />
                                <span asp-validation-for="DateOfBirth" class="text-danger"></span>
                                <div class="invalid-feedback">
                                    يرجى إدخال تاريخ الميلاد
                                </div>
                            </div>
                        </div>

                        <!-- أزرار التحكم -->
                        <div class="row mt-4">
                            <div class="col-12">
                                <div class="d-flex justify-content-between">
                                    <a asp-action="Index" class="btn btn-outline-secondary btn-lg">
                                        <i class="fas fa-arrow-left me-2"></i>العودة للقائمة
                                    </a>
                                    <div>
                                        <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-outline-info btn-lg me-2">
                                            <i class="fas fa-eye me-2"></i>عرض التفاصيل
                                        </a>
                                        <button type="submit" class="btn btn-warning btn-lg">
                                            <i class="fas fa-save me-2"></i>حفظ التعديلات
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>

            <!-- معلومات إضافية -->
            <div class="card mt-4 border-warning">
                <div class="card-body">
                    <h6 class="card-title text-warning">
                        <i class="fas fa-exclamation-triangle me-2"></i>تنبيهات مهمة
                    </h6>
                    <ul class="list-unstyled mb-0">
                        <li><i class="fas fa-info-circle text-info me-2"></i>رقم الطالب وتاريخ التسجيل لا يمكن تعديلهما</li>
                        <li><i class="fas fa-check text-success me-2"></i>تأكد من صحة البريد الإلكتروني قبل الحفظ</li>
                        <li><i class="fas fa-check text-success me-2"></i>جميع التعديلات ستُحفظ فوراً عند الضغط على "حفظ التعديلات"</li>
                        <li><i class="fas fa-check text-success me-2"></i>يمكنك مراجعة التفاصيل قبل الحفظ</li>
                    </ul>
                </div>
            </div>

            <!-- إحصائيات سريعة -->
            <div class="card mt-4 border-primary">
                <div class="card-body">
                    <h6 class="card-title text-primary">
                        <i class="fas fa-chart-line me-2"></i>معلومات إضافية
                    </h6>
                    <div class="row text-center">
                        <div class="col-md-4">
                            <div class="border-end">
                                <h5 class="text-primary mb-1">@((DateTime.Now - Model.DateOfBirth).Days / 365)</h5>
                                <small class="text-muted">العمر (سنة)</small>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="border-end">
                                <h5 class="text-success mb-1">@((DateTime.Now - Model.EnrollmentDate).Days)</h5>
                                <small class="text-muted">أيام منذ التسجيل</small>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <h5 class="text-info mb-1">@Model.Enrollments.Count</h5>
                            <small class="text-muted">عدد المقررات</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .form-control:focus {
        border-color: #ffc107;
        box-shadow: 0 0 0 0.2rem rgba(255, 193, 7, 0.25);
    }

    .card {
        border-radius: 15px;
        border: none;
    }

    .card-header {
        border-radius: 15px 15px 0 0 !important;
    }

    .form-label {
        color: #495057;
        margin-bottom: 8px;
    }

    .btn {
        border-radius: 8px;
        font-weight: 500;
    }

    .invalid-feedback {
        display: block;
    }

    .alert {
        border-radius: 10px;
    }

    .border-end {
        border-right: 1px solid #dee2e6 !important;
    }

    @@media (max-width: 768px) {
        .border-end {
            border-right: none !important;
            border-bottom: 1px solid #dee2e6 !important;
            margin-bottom: 1rem;
            padding-bottom: 1rem;
        }
    }
</style>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        // Bootstrap form validation
        (function() {
            'use strict';
            window.addEventListener('load', function() {
                var forms = document.getElementsByClassName('needs-validation');
                var validation = Array.prototype.filter.call(forms, function(form) {
                    form.addEventListener('submit', function(event) {
                        if (form.checkValidity() === false) {
                            event.preventDefault();
                            event.stopPropagation();
                        }
                        form.classList.add('was-validated');
                    }, false);
                });
            }, false);
        })();

        // تحديد الحد الأقصى لتاريخ الميلاد
        document.addEventListener('DOMContentLoaded', function() {
            const dobInput = document.querySelector('input[name="DateOfBirth"]');
            const today = new Date();
            const maxDate = new Date(today.getFullYear() - 16, today.getMonth(), today.getDate());
            dobInput.max = maxDate.toISOString().split('T')[0];
        });

        // تأكيد الحفظ
        document.querySelector('form').addEventListener('submit', function(e) {
            if (!confirm('هل أنت متأكد من حفظ التعديلات؟')) {
                e.preventDefault();
            }
        });
    </script>
}
