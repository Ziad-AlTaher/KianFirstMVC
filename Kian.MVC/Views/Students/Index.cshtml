@using Kian.BL.Models
@model List<Student>

@{
    ViewData["Title"] = "Students";
}

<div class="container mt-4">
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle me-2"></i>
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-circle me-2"></i>
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1 class="display-4 text-primary">
                    <i class="fas fa-users me-3"></i>قائمة الطلاب
                </h1>
                <a href="@Url.Action("Create", "Students")"  class="btn btn-success btn-lg">
                    <i class="fas fa-plus me-2"></i>إضافة طالب جديد
                </a>
            </div>

            @if (Model != null && Model.Any())
            {
                <div class="card shadow">
                    <div class="card-header bg-primary text-white">
                        <h5 class="mb-0">
                            <i class="fas fa-table me-2"></i>بيانات الطلاب
                        </h5>
                    </div>
                    <div class="card-body p-0">
                        <div class="table-responsive">
                            <table class="table table-hover table-striped mb-0">
                                <thead class="table-dark">
                                    <tr>
                                        <th scope="col">#</th>
                                        <th scope="col">الاسم الأول</th>
                                        <th scope="col">الاسم الأخير</th>
                                        <th scope="col">البريد الإلكتروني</th>
                                        <th scope="col">رقم الهاتف</th>
                                        <th scope="col">تاريخ الميلاد</th>
                                        <th scope="col">تاريخ التسجيل</th>
                                        <th scope="col" class="text-center">الإجراءات</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var student in Model)
                                    {
                                        <tr>
                                            <td class="fw-bold">@student.Id</td>
                                            <td>@student.FirstName</td>
                                            <td>@student.LastName</td>
                                            <td>
                                                <a href="mailto:@student.Email" class="text-decoration-none">
                                                    <i class="fas fa-envelope me-1"></i>@student.Email
                                                </a>
                                            </td>
                                            <td>
                                                @if (!string.IsNullOrEmpty(student.Phone))
                                                {
                                                    <a href="tel:@student.Phone" class="text-decoration-none">
                                                        <i class="fas fa-phone me-1"></i>@student.Phone
                                                    </a>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">غير محدد</span>
                                                }
                                            </td>
                                            <td>
                                                <span class="badge bg-info">
                                                    <i class="fas fa-calendar me-1"></i>@student.DateOfBirth.ToString("dd/MM/yyyy")
                                                </span>
                                            </td>
                                            <td>
                                                <span class="badge bg-success">
                                                    <i class="fas fa-calendar-check me-1"></i>@student.EnrollmentDate.ToString("dd/MM/yyyy")
                                                </span>
                                            </td>
                                            <td class="text-center">
                                                <div class="btn-group" role="group">
                                                   
                                                    <a asp-action="Details" asp-controller="Students" asp-route-id="@student.Id" 
                                                       class="btn btn-outline-info btn-sm" title="عرض التفاصيل">
                                                        <i class="fas fa-eye"></i>
                                                    </a>
                                                    <a href="@Url.Action("Edit", "Students", new { id = student.Id })"
                                                       class="btn btn-outline-warning btn-sm" title="تعديل">
                                                        <i class="fas fa-edit"></i>
                                                    </a>
                                                    <a href="@Url.Action("Delete", "Students", new { id = student.Id })"
                                                       class="btn btn-outline-danger btn-sm" title="حذف">
                                                        <i class="fas fa-trash"></i>
                                                    </a>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <div class="card-footer bg-light">
                        <div class="row">
                            <div class="col-md-6">
                                <small class="text-muted">
                                    <i class="fas fa-info-circle me-1"></i>
                                    إجمالي عدد الطلاب: <strong>@Model.Count</strong>
                                </small>
                            </div>
                            <div class="col-md-6 text-end">
                                <small class="text-muted">
                                    <i class="fas fa-clock me-1"></i>
                                    آخر تحديث: @DateTime.Now.ToString("dd/MM/yyyy HH:mm")
                                </small>
                            </div>
                        </div>
                    </div>
                </div>
            }
            else
            {
                <div class="card shadow">
                    <div class="card-body text-center py-5">
                        <div class="mb-4">
                            <i class="fas fa-users fa-5x text-muted"></i>
                        </div>
                        <h3 class="text-muted mb-3">لا توجد بيانات طلاب</h3>
                        <p class="text-muted mb-4">لم يتم العثور على أي طلاب في النظام حالياً</p>
                        <a href="@Url.Action("Create", "Students")" class="btn btn-primary btn-lg">
                            <i class="fas fa-plus me-2"></i>إضافة أول طالب
                        </a>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

<style>
    .table th {
        border-top: none;
        font-weight: 600;
    }

    .table-hover tbody tr:hover {
        background-color: rgba(0, 123, 255, 0.1);
    }

    .btn-group .btn {
        margin: 0 1px;
    }

    .card {
        border: none;
        border-radius: 15px;
    }

    .card-header {
        border-radius: 15px 15px 0 0 !important;
    }

    .display-4 {
        font-weight: 700;
    }

    .badge {
        font-size: 0.8em;
    }
</style>

